    <button type="button" class="btn d-none" data-toggle="modal" data-target="#bookingSuccessfulyDone" id="bookingSuccessfulyDoneBtn">
        ok
    </button>

    <!-- Modal -->
    <div class="modal fade" id="bookingSuccessfulyDone" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <span>
                        <img src="~/image/home/logout.png" />
                    </span>
                    <h3>Booking has been successfully submitted</h3>
                    <h4>Service Request Id : <b id="CoonfirmBookReferenceId"></b></h4>
                    <a class="btn SuccessOkBtn" asp-controller="Customer" asp-action="Dashboard">Ok</a>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="RescheduleError" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <h3>This Provider has already booked another service at this time pleaase try Again !</h3>
                    <a class="btn CancleOkBtn" asp-controller="Customer" asp-action="BookService">Ok</a>
                </div>
            </div>
        </div>
    </div>
    <div class="loader-div d-none">
        <div class="sk-chase">
            <div class="sk-chase-dot"></div>
            <div class="sk-chase-dot"></div>
            <div class="sk-chase-dot"></div>
            <div class="sk-chase-dot"></div>
            <div class="sk-chase-dot"></div>
            <div class="sk-chase-dot"></div>
        </div>
    </div>
    <div class="container">
        <div class="header">
            <h1 class="text-center header-color">Set up your cleaning service</h1>
            <div class="d-flex justify-content-center star">
                <hr / class="side_hr">
                <img src="~/image/price/star.png" />
                <hr / class="side_hr">
            </div>
        </div>
        <div class="row mainPortation">
            <div class="col-xl-8 col-lg-12">
                <div>
                    <ul class="nav nav-pills" id="pills-tab" role="tablist">
                        <li class="nav-item bookNowMenu">
                            <a class="nav-link active" id="pills-service-tab" data-toggle="pill" href="#pills-service" role="tab"
                               aria-controls="pills-service" aria-selected="true" onclick="firstTab()">
                                <img src="~/image/booking_service/setup-service (1).png" />
                                <p class="mb-0">
                                    <span class="step-title">
                                        Setup
                                        Service
                                    </span>
                                </p>
                            </a>
                        </li>
                        <li class="nav-item bookNowMenu">
                            <a class="nav-link" id="pills-schedule-tab" data-toggle="pill" href="#pills-schedule" role="tab"
                               aria-controls="pills-schedule" aria-selected="false" onclick="secondTab()">
                                <img src="~/image/booking_service/schedule-plan.png" />
                                <p class="mb-0">
                                    <span class="step-title">Schedule & Plan</span>
                                </p>
                            </a>
                        </li>
                        <li class="nav-item bookNowMenu">
                            <a class="nav-link" id="pills-details-tab" data-toggle="pill" href="#pills-details" role="tab"
                               aria-controls="pills-details" aria-selected="false" onclick="thirdTab()">
                                <img src="~/image/booking_service/user-details (1).png" />
                                <p class="mb-0">
                                    <span class="step-title">
                                        Your
                                        Details
                                    </span>
                                </p>
                            </a>
                        </li>
                        <li class="nav-item bookNowMenu">
                            <a class="nav-link" id="pills-payment-tab" data-toggle="pill" href="#pills-payment" role="tab"
                               aria-controls="pills-payment" aria-selected="false" onclick="fourthTab()">
                                <img src="~/image/booking_service/payment.png" />
                                <p class="mb-0">
                                    <span class="step-title">
                                        Make
                                        Payment
                                    </span>
                                </p>
                            </a>
                        </li>
                    </ul>
                    <img src="~/image/price/logo.png" style="display:none" id="loader" />
                    <div class="tab-content" id="pills-tabContent">

                        @await Html.PartialAsync("_setupServicePV")

                        @await Html.PartialAsync("_scheduleServicePV")

                        @await Html.PartialAsync("_addressDetailsPV")


                        <div class="tab-pane fade" id="pills-payment" role="tabpanel" aria-labelledby="pills-payment-tab">
                            <div class="payment-content">
                                <form>
                                    <span class="question">Pay securely with Helperland payment gateway!</span>

                                    <span>Promo Code (Optional)</span>
                                    <div class="row">
                                        <div class="col-xs-7 col-sm-6 col-md-4">
                                            <input class="form-control" type="text" placeholder="Promo Code (Optional)" readonly />
                                        </div>
                                        <div class="col-xs-5 col-sm-3 col-md-2">
                                            <button class="btn custombtn" id="apply" type="submit" disabled>
                                                Apply
                                            </button>
                                        </div>
                                    </div>
                                    <hr class="divider" />
                                    <div class="inputCardNumber">

                                        <input class="form-control" type="text" placeholder="Card Number" readonly>
                                    </div>

                                    <div class="row">

                                        <div class="col-sm-12">
                                            <div class="Paycard">
                                                <span>Accept Cards</span><br>
                                                <span>
                                                    <img src="~/image/booking_service/master.png" alt="master">
                                                    <img src="~/image/booking_service/visa.png" alt="visa">
                                                    <img src="~/image/booking_service/american.png" alt="america">
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="divider" />
                                    <div class="acceptTerm">
                                        <label>
                                            <input type="checkbox" id="TermAndCondCheckbox">
                                            <span>
                                                I accepted terms and conditions, the cancellation policy and the privacy policy. I confirm that Helperland starts to execute the contract before the expiry of the withdrawal period and I lose my right of withdrawal as a consumer with full performance of the contract.
                                            </span>
                                        </label>
                                    </div>
                                    <hr class="divider" />
                                    <div class="text-right">
                                        <button type="button" class="btn custombtn btn-lg" id="CompleteBookingBtn" onclick="CompleteBooking()">
                                            Complete Booking
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
