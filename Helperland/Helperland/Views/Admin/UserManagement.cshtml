@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.1.0/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin_UserManagement.css" />
    <link rel="shortcut icon" href="~/image/home/favicon.ico" type="image/x-icon" />
    <title>Admin User Management</title>
</head>

<body>
    <header>
        <nav class="navbar">
            <div class="container-fluid ">
                <div class="d-flex align-items-center">
                    <div class="mobileNavIcon">
                        <button class="navbar-toggler"> <span></span> <span></span> <span></span> </button>
                    </div>
                    <h1 class="text-white">helperland</h1>
                </div>
                <div class="d-flex align-items-center admin-detail"> <img class="mx-1" src="~/image/upcoming_service/user.svg" alt="userIcon" /> <span class="text-white mx-1">@ViewBag.UserName</span> <a asp-controller="Account" asp-action="Logout"><img class="mx-1" src="~/image/admin_UserManagement/logout.png" /> </a></div>
            </div>
        </nav>
    </header>
    <section class="main">
        <div class="container-fluid dashboard">
            <div class="d-flex" id="wrapper">
                <!-- Sidebar -->
                <div id="sidebar-wrapper">
                    <div class="closebtn d-none">
                        <img src="~/image/home/times-solid.svg" alt="close">
                        <br>
                        <hr>
                    </div>
                    <ul>
                        <li><a asp-controller="Admin" asp-action="ServiceRequest">Service Requests</a></li>
                        <li><a asp-controller="Admin" asp-action="UserManagement" class="active">User Management</a></li>
                    </ul>
                </div>
                <!-- /#sidebar-wrapper -->
                <!-- /#modal start -->
                <div class="modal fade" id="mobileSorting" role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Choose Option</h4>
                                <a class="close" data-dismiss="modal"><img src="~/image/home/window-close-regular.svg" alt="closebtn"></a>
                            </div>
                            <div class="modal-body forgot-password">
                                <form>
                                    <input type="radio" name="sortOption" id="UserNameAtoZ" value="UserNameAtoZ">&nbsp;User Name : A to Z<br>
                                    <input type="radio" name="sortOption" id="UserNameZtoA" value="UserNameZtoA">&nbsp;User Name : Z to A<br>
                                    <input type="radio" name="sortOption" id="PostalCode:Ascending" value="PostalCode:Ascending">&nbsp;Postal Code : Ascending<br>
                                    <input type="radio" name="sortOption" id="PostalCode:Descending" value="PostalCode:Descending">&nbsp;Postal Code : Descending<br>
                                    <input type="radio" name="sortOption" id="UserStatus:Ascending" value="UserStatus:Ascending">&nbsp;User Status : Ascending<br>
                                    <input type="radio" name="sortOption" id="UserStatus:Descending" value="UserStatus:Descending">&nbsp;User Status : Descending<br>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="loader-div d-none">
                    <div class="sk-chase">
                        <div class="sk-chase-dot"></div>
                        <div class="sk-chase-dot"></div>
                        <div class="sk-chase-dot"></div>
                        <div class="sk-chase-dot"></div>
                        <div class="sk-chase-dot"></div>
                        <div class="sk-chase-dot"></div>
                    </div>
                </div>
                <div class="modal fade" id="DeactivateActionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-body text-center">
                                <input type="text" class="d-none" id="ClickedUserId" />
                                <h3>Are you sure you want to Deactivate User ?</h3>
                                <input type="button" class="btn" value="Yes" onclick="DeactivateUser()" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="ActivateActionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-body text-center">
                                <input type="text" class="d-none" id="ClickUserId" />
                                <h3>Are you sure you want to Activate User ?</h3>
                                <input type="button" class="btn" value="Yes" onclick="ActivateUser()" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="SuccessActionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-body text-center">
                                <h3>User Updated Successfully  !</h3>
                                <input type="button" id="SuccessActionModalBtn" class="btn" value="Yes" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- /#modal end -->
                <!-- Page Content -->
                <div class="w-100 pl-3" id="page-content-wrapper">
                    <div class="d-flex datatable_heading align-items-center">
                        <div>User Management</div>
                    </div>
                    <div>
                        <form>
                            <div class="filter row">
                                <div class="col-xl-2 col-md-4 col-6">
                                    <select name="userName" id="userName">
                                        <option value="" disabled selected hidden>User Name</option>

                                    </select>
                                </div>
                                <div class="col-xl-2 col-md-4 col-6">
                                    <select name="userRole" id="userRole">
                                        <option value="" disabled selected>User Role</option>
                                        <option value="Admin">Admin</option>
                                        <option value="Customer">Customer</option>
                                        <option value="Service Provider">Service Provider</option>
                                    </select>
                                </div>
                                <div class="col-xl-3 col-md-4 col-6">
                                    <div class="input-group row mobile">
                                        <input type="text" class="form-control input-group-text col-3 px-0" id="countryCode" placeholder="+91" readonly>
                                        <input type="text" name="phone" id="phone" class="form-control col-9" placeholder="Phone Number">
                                    </div>
                                </div>
                                <div class="col-xl-2 col-md-4 col-6">
                                    <input class="form-control" type="number" placeholder="Zipcode" name="zipcode" id="zipcode">
                                </div>
                                <div class="col-xl-2 col-md-4 col-6">
                                    <input class="form-control" type="text" placeholder="Email" name="email" id="email">
                                </div>
                                <div class="col-xl-2 col-md-4 col-6">
                                    <div class="input-group">
                                        <input class="form-control" id="from-date" name="date" placeholder="From Date" type="text"/>
                                    </div>
                                </div>
                                <div class="col-xl-2 col-md-4 col-6">
                                    <div class="input-group">
                                        <input class="form-control" id="to-date" name="date" placeholder="To Date" type="text"/>
                                    </div>
                                </div>
                                <div class="col-xl-1 col-md-4 col-6">
                                    <button type="button" id="search">Search</button>
                                </div>
                                <div class="col-xl-1 col-md-4 col-6">
                                    <button type="button" id="clear">Clear</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="py-2 mt-3 mobile_sorting text-center"><a href="#" data-toggle="modal" data-target="#mobileSorting" data-dismiss="modal">Sort Data : <img src="~/image/upcoming_service/arrow.svg" alt="sorting-arrow"></a></div>

                    <div class="d-flex mt-3 align-items-center">
                        <div class="ml-auto addBtn">
                            <button onclick="ExcelSheetDown()">Export</button>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col">
                            <table class="dataTable w-100 table" id="userManagementTable">
                                <thead>
                                    <tr>
                                        <th>User Name</th>
                                        <th>Role</th>
                                        <th>Date of Registration</th>
                                        <th>User Type</th>
                                        <th>Phone</th>
                                        <th class="text-center">Postal Code</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                        <th class="d-none">Email</th>
                                    </tr>
                                </thead>
                                <tbody id="UserManagementTblData">
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <p class="rights">©2018 Helperland. All rights reserved.</p>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </section>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.2/xlsx.full.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
    <script src="https://cdn.datatables.net/datetime/1.1.2/js/dataTables.dateTime.min.js"></script>

    <script src="~/js/admin_UserManagement.js"></script>
</body>

</html>