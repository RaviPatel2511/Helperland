@model Helperland.Models.User


    @section css{
<link rel="stylesheet" href="~/css/customer_signup.css" />
         }
<section>
    <div class="container signupform">
        <h1 class="text-center mt-5">Create an account</h1>
        <div class="d-flex justify-content-center star">
            <hr / class="side_hr"> <img src="~/image/price/star.png" />
            <hr / class="side_hr">
        </div>
        @if (ViewBag.IsuserExists == true)
        {
        <div class="alert alert-danger fade show" role="alert">
            <strong>
               This email is already registered please try with another .
            </strong>
        </div>
        }
        <form asp-controller="Account" asp-action="CustSignup" method="post">
            <div class="row">
                <div class="col">
                    <input asp-for="FirstName" class="form-control" placeholder="First name">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col">
                    <input asp-for="LastName" class="form-control" placeholder="Last name">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <input asp-for="Email" class="form-control" placeholder="Email Adress">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col">
                    <div class="input-group">
                        <span class="form-control input-group-text col-2" id="countryCode">+91</span>
                        <input asp-for="Mobile" id="phone" class="form-control col-10" placeholder="Phone Number" />
                    </div>
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <input asp-for="Password" class="form-control" id="pass" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col">
                    <input type="password"  class="form-control" id="confirmPass" placeholder="Confirm Password">
                    <span id="confirmPassError" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col">

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="policy" required />
                        <label class="form-check-label" for="policy">I have read the <a href="javascript:void(0)">privacy policy</a></label>
                    </div>
                </div>
            </div>
            <div class="row d-flex align-items-center justify-content-center">

                <input type="submit" value="Register" class="btn" id="register" disabled="disabled" />
            </div>
        </form>
        <div class="text-center">
            <p>Already registered ? <a asp-controller='Helperland' asp-action='Index' asp-route-loginModal='true'>Login now</a></p>
        </div>
    </div>
</section>


@section script{
@*<script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>*@
<script src="~/js/customer_signup.js"></script>
}
