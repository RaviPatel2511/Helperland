@section css{
    <link rel="stylesheet" href="~/css/contact.css" />
}

<section>
    <div> <img src="~/image/contact/mainbg.png" class="img-fluid bg_main" alt="mainimage" /> </div>
</section>
<!--//////////////////////////////////// Contact us/////////////////////////////// -->
<section class="contactus">
    <h2 class="text-center contactusHeading">Contact us</h2>
    <div class="d-flex justify-content-center star">
        <hr / class="side_hr"> <img src="~/image/price/star.png" />
        <hr / class="side_hr">
    </div>
    <div class="container contactus_container">
        <div class="row">
            <div class="col-12 col-md-4 col-sm-6 ">
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <img src="~/image/contact/location.svg" alt="location">
                    <div class="text-center contactus_text">
                        1111 Lorem ipsum text 100,
                        <br> Lorem ipsum AB
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4 col-sm-6 iconcolumn">
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <img src="~/image/contact/phone-call.png" alt="call">
                    <div class="text-center contactus_text">
                        +49 (40) 123 56 7890
                        <br> +49 (40) 987 56 0000
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4 col-sm-12 iconcolumn">
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <img src="~/image/contact/mail_image.webp" alt="email">
                    <div class="text-center contactus_text">info@helperland.com</div>
                </div>
            </div>
        </div>
    </div>
    <div class="container d-flex justify-content-center align-items-center">
        <hr / class="contactusHr">
    </div>
</section>
<!-- /* //////////////////////////////////// Contact us form /////////////////////////////// */ -->
<section class="contactusForm">
    <h2 class="contactusFormHeading text-center">Get in touch with us</h2>
    <div class="container contactusFormContainer">
        <form>
            <div class="form-row mb-2">
                <div class="col-12 col-sm-6">
                    <input type="text" class="form-control" placeholder="First name">
                </div>
                <div class="col-12 col-sm-6">
                    <input id="last_name" type="text" class="form-control" placeholder="Last name">
                </div>
            </div>
            <div class="form-row mb-2">
                <div class="col-12 col-sm-6">
                    <div class="input-group mx-0 row">
                        <input type="text" class="input-group-text col-2 px-0" id="countryCode" placeholder="+91" />
                        <input type="number" class="form-control col-10" placeholder="Mobile Number" aria-label="Mobile Number" aria-describedby="basic-addon1" />
                    </div>
                </div>
                <div class="col-12 col-sm-6">
                    <input id="usermail" type="email" class="form-control" placeholder="Email Adress">
                </div>
            </div>
            <div class="form-row mb-2">
                <div class="col">
                    <div class="dropdown subjectDropdown">
                        <button class="btn w-100" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <a class="float-left">Subject</a>
                            <svg class="float-right mt-2" xmlns="http://www.w3.org/2000/svg" width="15" height="10">
                                <path fill-rule="evenodd" fill="#646464" d="M.28 1.878a.528.528 0 0 1-.152-.376c0-.143.051-.272.152-.376.204-.207.534-.207.9 0l6.319 6.608 6.483-6.608a.515.515 0 0 1 .737 0 .54.54 0 0 1 0 .752L7.868 8.861c-.203.819-.534.819-.737 0L.28 1.878z" />
                            </svg>
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton"> <a class="dropdown-item" href="#">Action</a> <a class="dropdown-item" href="#">Another action</a> <a class="dropdown-item" href="#">Something else here</a> </div>
                    </div>
                </div>
            </div>
            <div class="form-group mb-2">
                <textarea placeholder="Message" class="form-control" rows="3"></textarea>
            </div>
            <div class="text-center">
                <button class="formSubmit mt-2">Submit</button>
            </div>
        </form>
    </div>
</section>
<!--//////////////////////////////////// MAP/////////////////////////////// -->
<section>
    <div class="map"> <img src="~/image/contact/map.png" alt="map"> <img src="~/image/contact/map_location.png"> </div>
    <h3 class="text-center contact"><strong>GET OUR NEWSLETTER</strong></h3>
    <form class="text-center subscribeEmail">
        <div class="form-group">
            <input type="email" id="email" class="form-control" placeholder="Your Email" />
            <button type="button" class="btn submitbtn">Submit</button>
        </div>
    </form>
</section>
@section script{
<script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/js/contact.js"></script>
 }
